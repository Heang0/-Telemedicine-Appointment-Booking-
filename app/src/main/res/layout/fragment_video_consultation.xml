<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Doctor's video preview -->
    <FrameLayout
        android:id="@+id/doctor_video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/placeholder_doctor"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. John Smith"
            android:textColor="@android:color/white"
            android:background="@color/design_default_color_primary_dark"
            android:padding="8dp"
            android:layout_gravity="top|start"
            android:layout_margin="16dp" />

    </FrameLayout>

    <!-- Patient's video preview (smaller, floating) -->
    <FrameLayout
        android:id="@+id/patient_video_container"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@android:color/darker_gray">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/placeholder_patient"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            android:textColor="@android:color/white"
            android:background="@color/design_default_color_primary_dark"
            android:padding="4dp"
            android:layout_gravity="bottom|center" />

    </FrameLayout>

    <!-- Controls overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/design_default_color_primary_dark">

        <ImageButton
            android:id="@+id/btn_toggle_mic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_mic_on"
            android:background="@drawable/circle_button_bg"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/btn_end_call"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_call_end"
            android:background="@drawable/circle_button_end_call_bg"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/btn_toggle_camera"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_camera_on"
            android:background="@drawable/circle_button_bg"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/btn_chat"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_chat"
            android:background="@drawable/circle_button_bg" />

    </LinearLayout>

    <!-- Chat panel (initially hidden) -->
    <LinearLayout
        android:id="@+id/chat_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:visibility="gone"
        android:layout_above="@+id/chat_input_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultation Chat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@color/design_default_color_primary"
            android:textColor="@android:color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_chat_messages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Chat input (initially hidden) -->
    <LinearLayout
        android:id="@+id/chat_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <EditText
            android:id="@+id/edit_chat_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type your message..."
            android:padding="12dp" />

        <Button
            android:id="@+id/btn_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</RelativeLayout>