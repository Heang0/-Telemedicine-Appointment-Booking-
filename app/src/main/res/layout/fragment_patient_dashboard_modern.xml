<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="16dp">

    <!-- Welcome Header -->
    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back,"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_welcome"
        app:layout_constraintBottom_toTopOf="@id/card_quick_actions" />

    <!-- Quick Actions Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_quick_actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_quick_actions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/chip_group_actions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_quick_actions_title">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chip_book_appointment"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Book Appointment"
                    app:icon="@drawable/ic_calendar_today_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chip_messages"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Messages"
                    app:icon="@drawable/ic_chat_bubble_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chip_medical_records"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Records"
                    app:icon="@drawable/ic_health_records_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Upcoming Appointments Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_upcoming_appointments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/card_quick_actions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_upcoming_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Upcoming Appointments"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_see_all_appointments" />

            <TextView
                android:id="@+id/text_see_all_appointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textSize="14sp"
                android:textColor="?attr/colorPrimary"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/text_upcoming_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_upcoming_appointments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="140dp"
                app:layout_constraintTop_toBottomOf="@id/text_upcoming_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Health Stats Grid (2x2 using ConstraintLayout) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_health_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/card_upcoming_appointments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_health_stats_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Overview"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Top-left card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_last_visit"
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_next_appointment"
                app:layout_constraintTop_toBottomOf="@id/text_health_stats_title"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginEnd="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_last_visit"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_access_time_24"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Last Visit"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toEndOf="@id/icon_last_visit"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/text_last_visit_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Jan 15, 2023"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/icon_last_visit"
                        app:layout_constraintTop_toBottomOf="@id/icon_last_visit"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Top-right card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_next_appointment"
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toEndOf="@id/card_last_visit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_health_stats_title"
                app:layout_constraintHorizontal_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_next_appointment"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_event_available_24"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Next Appointment"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toEndOf="@id/icon_next_appointment"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/text_next_appointment_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Feb 5, 2023"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/icon_next_appointment"
                        app:layout_constraintTop_toBottomOf="@id/icon_next_appointment"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom-left card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_medications"
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_allergies"
                app:layout_constraintTop_toBottomOf="@id/card_last_visit"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_medications"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_medication_24"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Active Medications"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toEndOf="@id/icon_medications"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/text_medications_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/icon_medications"
                        app:layout_constraintTop_toBottomOf="@id/icon_medications"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom-right card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_allergies"
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toEndOf="@id/card_medications"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_next_appointment"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginTop="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_allergies"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_allergy_24"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Allergies"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toEndOf="@id/icon_allergies"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/text_allergies_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/icon_allergies"
                        app:layout_constraintTop_toBottomOf="@id/icon_allergies"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
