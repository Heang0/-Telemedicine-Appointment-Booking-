<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digital Prescription Pad"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Patient Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Spinner
                    android:id="@+id/spinner_patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- Patient medical summary -->
                <TextView
                    android:id="@+id/text_patient_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient medical summary will appear here"
                    android:textSize="14sp"
                    android:textColor="@color/design_default_color_on_background"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

                <!-- Allergy warning -->
                <TextView
                    android:id="@+id/text_allergy_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Patient has allergies: Penicillin, Sulfa drugs"
                    android:textSize="14sp"
                    android:textColor="@color/design_default_color_error"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Medication Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Medication"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Medication search -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Search Medications">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_medication_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:drawableEnd="@drawable/ic_search" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/spinner_medications_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Medication Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_medication_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Dosage">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_dosage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Frequency">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_frequency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Duration">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Quantity">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Route and Form -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Route">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_route"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Oral, Topical, IV, etc." />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Form">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tablet, Capsule, Liquid" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Controlled substance checkbox -->
                <CheckBox
                    android:id="@+id/checkbox_controlled_substance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is a controlled substance (Schedule II-V)"
                    android:layout_marginBottom="12dp" />

                <!-- DEA Number field (visible when controlled substance checked) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_dea_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="DEA Registration Number"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_dea_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_add_medication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Medication"
                    android:layout_marginBottom="16dp" />

                <!-- Medication list -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Added Medications:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_medications_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <!-- Drug interaction warning -->
                <TextView
                    android:id="@+id/text_interaction_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Drug interaction check: No significant interactions detected"
                    android:textSize="14sp"
                    android:textColor="@color/design_default_color_on_background"
                    android:background="@drawable/bg_warning"
                    android:padding="12dp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Prescription Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prescription Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Diagnosis (ICD-10 Code)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_diagnosis_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g., I10 for Hypertension" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Clinical Indication">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_clinical_indication"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:hint="Why this medication was prescribed" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="General Instructions">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="2" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Additional Notes">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Refill Management -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Refill Management"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Total Refills">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_total_refills"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="3" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Refill Expiry">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_refill_expiry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="90 days" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Pharmacy Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pharmacy Selection"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/spinner_pharmacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- Digital Signature Requirement -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Digital Signature Required"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please authenticate to sign this prescription"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_authenticate_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Authenticate &amp; Sign Prescription"
                    android:backgroundTint="@color/design_default_color_primary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_create_prescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Prescription"
            android:textSize="16sp"
            android:padding="14dp"
            android:enabled="false"
            android:backgroundTint="@color/design_default_color_on_surface"
            android:textColor="@color/design_default_color_on_background" />

    </LinearLayout>

</ScrollView>